<p id="notice"><%= notice %></p>

<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Neighborhood</th>
      <th>Size</th>
      <th>Category</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location%></td>
        <td><%= location.neighborhood %></td>
        <td><%= location.size %></td>
        <td><%= location.location_type.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



