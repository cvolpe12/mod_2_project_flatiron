<p id="notice"><%= notice %></p>
<% if @locations.blank? %>
  <h4>There are no results for <%= params[:search] %>.</h4>
<% end %>

<div class="row">
  <div class="col s6" width="200" style="width: 200px">
    Search:
    <div width="200" style="width: 200px"><%= form_tag(locations_path, method: "get", id: "search-form") do %>
     <%= text_field_tag :search, params[:search] %>
      <%= submit_tag "Search", :name => nil %>
     <% end %></div>
     </div>

   <div class="col s6 offset-s1" width="200" style="width: 200px">
    Sort:
    <%= form_tag(locations_path, method: "get", id: "menu") do %>
      <select name = "option" class="browser-default" width="200" style="width: 200px">
        <option placeholder = "Sort">  Sort</option>
        <option value = "rating"> Sort by Rating</option>
        <option value = "neighborhood"> Sort by Neighborhood</option>
        <option value = "category"> Sort by Category</option>
      </select>
      <%= submit_tag 'submit' %>
    <% end %>
  </div>
</div>





<div class="row">
  <% @locations.each do |location| %>
    <div class="col s2 m4">
      <div class="card medium">
        <div class="card-image">
          <img src="<%= location.image_url %>" height="275" width="275">
          <span class="card-title"> <%= location.name %> </span>
        </div>
        <div class="card-content">
          <p> <%= location.stars %> <%= location.neighborhood %> <br><%= location.description.truncate(135, separator: ' ') %></p>
        </div>
        <div class="card-action">
          <%= link_to "More Info", location%>
        </div>
      </div>
    </div>
    <% end %>
  </div>



<br>
