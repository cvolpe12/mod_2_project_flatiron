<p id="notice"><%= notice %></p>
<% if @locations.blank? %>
  <h4>There are no results for <%= params[:search] %>.</h4>
<% end %>

<h4>Search:</h4>
<%= form_tag(locations_path, method: "get", id: "search-form") do %>
  <%= text_field_tag :search, params[:search] %>
  <%= submit_tag "Search", :name => nil %>
<% end %>


<h1>Locations</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Neighborhood</th>
      <th>Size</th>
      <th>Category</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @locations.each do |location| %>
      <tr>
        <td><%= link_to location.name, location%></td>
        <td><%= location.neighborhood %></td>
        <td><%= location.size %></td>
        <td><%= location.location_type.category %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>



<%= link_to 'New Location', new_location_path %>
